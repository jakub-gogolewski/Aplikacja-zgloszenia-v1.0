{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}Witaj w panelu administracyjnym {% endblock %}

{% block main %}
    {{ parent() }}

    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <div id="chart_div"></div>

    <script type="text/javascript">
  {# google.charts.load('current', {packages:["orgchart"]});
  google.charts.setOnLoadCallback(drawChart);

  function drawChart() {
    var data = new google.visualization.DataTable();
    data.addColumn('string', 'Node');
    data.addColumn('string', 'Parent');

    // Definiowanie węzłów grafu
    data.addRows([
      [{'v':'start', 'f':'Start'}, ''],
      [{'v':'analiza', 'f':'Analiza'}, 'start'],
      [{'v':'realizacja', 'f':'Realizacja'}, 'analiza'],
      ['realizacja', 'start']
      // Możesz dodać więcej węzłów i relacji tutaj
    ]);

    // Ustawienie opcji wykresu
    var options = {
      allowHtml: true
    };

    // Rysowanie wykresu
    var chart = new google.visualization.OrgChart(document.getElementById('chart_div'));
    chart.draw(data, options); #}
  }
</script>
{% endblock %}